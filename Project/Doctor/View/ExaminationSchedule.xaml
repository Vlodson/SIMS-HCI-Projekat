<Window x:Class="Doctor.View.ExaminationSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctor.View"
        mc:Ignorable="d"
        Title="ExaminationSchedule" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">Raspored zakazanih pregleda</TextBlock>
        <Grid Grid.Column="0" Grid.Row="1">
            <DataGrid x:Name="dataGridExaminations" ItemsSource="{Binding Path= Examinations}" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Datum i vreme" Binding="{Binding Date}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Pacijent" Binding="{Binding Patient.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Tip" Binding="{Binding Type}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Soba" Binding="{Binding ExamRoom.Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Trajanje" Binding="{Binding Duration}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <TextBlock Grid.Column="0" Grid.Row="2">
            <Button x:Name="Zakazi" Content="Zakazi " Click="Zakazi_Click" ></Button>
            <Button x:Name="Izmeni" Content="Izmeni " Click="Izmeni_Click" ></Button>
            <Button x:Name="Otkazi" Content="Otkazi " Click="Otkazi_Click" ></Button>
        </TextBlock>
    </Grid>
</Window>
