<Page x:Class="Doctor.View.EndedExaminations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Doctor.View"
      mc:Ignorable="d" 
      d:DesignHeight="692" d:DesignWidth="710"
      Title="EndedExaminations">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGridExams" Grid.Row="1" ItemsSource="{Binding examinations, Mode=OneWay}" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" Margin="82,78,56,-133" Grid.RowSpan="2" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pacijent" Binding="{Binding PatientId}"></DataGridTextColumn>
                <DataGridTextColumn Header="Datum i vreme" Binding="{Binding Date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tip" Binding="{Binding EType}"></DataGridTextColumn>
                <DataGridTextColumn Header="Prostorija" Binding="{Binding ExamRoomId}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name ="Choose" Grid.Row="2" Template="{StaticResource BasicButton}" Content ="Odaberi" Margin="0,330,0,-330" Click="Choose_Click" />
        <Canvas Background="#FF437182" HorizontalAlignment="Center" Height="75" VerticalAlignment="Top" Width="730" Margin="0,-15,0,0">
            <TextBlock Style="{StaticResource TitleTextBlock}" HorizontalAlignment="Left" Canvas.Left="193" Canvas.Top="12" >ODABERI PREGLED</TextBlock>
        </Canvas>
    </Grid>
</Page>
