<Window x:Class="Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LogIn" Content="Prijavi se" HorizontalAlignment="Left" Margin="390,164,0,0" VerticalAlignment="Top" Height="22" Width="70" Click="LogIn_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="248,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="252,113,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTxt" Text="{Binding Path=UID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="0,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="PasswordTxt" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
