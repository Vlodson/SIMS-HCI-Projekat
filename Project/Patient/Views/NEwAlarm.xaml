<Window x:Class="Patient.Views.NEwAlarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patient.Views"
        mc:Ignorable="d"
        Title="NEwAlarm" Height="450" Width="539">
    <Window.Resources>
        <Style x:Key="_ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="_Border"
                                Padding="2"
                                SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="#66b2b2"/>
                                <!--<Setter Property="Foreground" Value="Red"/> -->
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MySimpleScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Border BorderThickness="1" BorderBrush="Gray">
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" FontSize="20" MinWidth="25" Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Grid Grid.Column="1" x:Name="GridRoot" Width="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Background="{TemplateBinding Background}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition MaxHeight="18"/>
                                        <RowDefinition Height="0.00001*"/>
                                        <RowDefinition MaxHeight="18"/>
                                    </Grid.RowDefinitions>
                                    <RepeatButton x:Name="DecreaseRepeat" Command="ScrollBar.LineDownCommand" Focusable="False">
                                        <Grid>
                                            <Path x:Name="DecreaseArrow" Stroke="{TemplateBinding Foreground}" StrokeThickness="1" Data="M 0 4 L 8 4 L 4 0 Z"/>
                                        </Grid>
                                    </RepeatButton>
                                    <RepeatButton Grid.Row="2" x:Name="IncreaseRepeat" Command="ScrollBar.LineUpCommand" Focusable="False">
                                        <Grid>
                                            <Path x:Name="IncreaseArrow" Stroke="{TemplateBinding Foreground}" StrokeThickness="1" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </RepeatButton>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#b2d8d8"/>
        </Grid.Background>
        <Label Content="Novi podsetnik" FontSize="28" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Naziv" HorizontalAlignment="Left" Margin="7,84,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="51,88,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="120" Height="22">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Vreme" HorizontalAlignment="Left" Margin="5,136,0,0" VerticalAlignment="Top"/>
        <Label Content="Dani" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top"/>
        <ListBox Background="white" x:Name="monday" SelectionMode="Multiple" SelectedIndex="{Binding Monday}"  ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="49,181,433,207">
            <ListBoxItem Background="white">pon</ListBoxItem>
        </ListBox>
        <ListBox Background="white" x:Name="tuesday" SelectionMode="Multiple" SelectedIndex="{Binding Tuesday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="109,181,373,207">
            <ListBoxItem Background="white">uto</ListBoxItem>
        </ListBox>
        <ListBox Background="white" SelectionMode="Multiple" SelectedIndex="{Binding Wednesday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="174,181,308,207">
            <ListBoxItem Background="white">sre</ListBoxItem>
        </ListBox>
        <ListBox Background="white" SelectionMode="Multiple" SelectedIndex="{Binding Thursday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="234,181,248,207">
            <ListBoxItem Background="white">čet</ListBoxItem>
        </ListBox>
        <ListBox Background="white" SelectionMode="Multiple" SelectedIndex="{Binding Friday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="294,181,188,207">
            <ListBoxItem Background="white">pet</ListBoxItem>
        </ListBox>
        <ListBox Background="white" SelectionMode="Multiple" SelectedIndex="{Binding Saturday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="354,181,128,207">
            <ListBoxItem Background="white">sub</ListBoxItem>
        </ListBox>
        <ListBox Background="white" SelectionMode="Multiple" SelectedIndex="{Binding Sunday}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="414,181,68,207">
            <ListBoxItem Background="white">ned</ListBoxItem>
        </ListBox>

        <Grid x:Name="Hours" Margin="49,121,221,142">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ScrollBar x:Name="scrollBarHours" Value="{Binding Hours}" HorizontalAlignment="Left" Style="{DynamicResource MySimpleScrollBar}" VerticalAlignment="Top" Maximum="59" Margin="10,10,0,0" SmallChange="1" Width="50"/>
        </Grid>



        <Grid x:Name="Minutes" Margin="119,122,150,140">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ScrollBar x:Name="scrollBarMinutes" Value="{Binding Minutes}" HorizontalAlignment="Left" Style="{DynamicResource MySimpleScrollBar}" VerticalAlignment="Top" Maximum="59" Margin="10,10,0,0" SmallChange="1" Width="50"/>
        </Grid>
        <Label Content=":" FontSize="28" HorizontalAlignment="Left" Margin="111,121,0,0" VerticalAlignment="Top"/>
        <Button Content="Kreiraj" Command="{Binding AddPersonalNotificationCommand}" HorizontalAlignment="Left" Margin="436,259,0,0" VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
