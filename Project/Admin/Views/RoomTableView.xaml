<UserControl x:Class="Admin.Views.RoomTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admin.Views"
             xmlns:vm="clr-namespace:Admin.ViewModel"
             xmlns:vml="clr-namespace:Admin.VML"
             vml:ViewModelLocator.AutoHookedUpViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="430">

    <DataGrid ItemsSource="{Binding Rooms}" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Room Nb" Binding="{Binding RoomNb}" Width="auto" />
            <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="auto" />
            <DataGridTextColumn Header="Occupancy" Binding="{Binding Occupancy}" Width="auto" />
            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>

</UserControl>
